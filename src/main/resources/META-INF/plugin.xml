<idea-plugin>
    <id>com.github.r00bertos1.zzpjplugin</id>
    <name>ZZPJ_plugin</name>
    <vendor>r00bertos1</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.r00bertos1.zzpjplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.r00bertos1.zzpjplugin.services.MyProjectService"/>
    </extensions>
    <actions>
        <action id="EditorBasics.EditorIllustrationAction"
                class="com.github.r00bertos1.zzpjplugin.listeners.EditorIllustrationAction"
                text="Editor Replace Text"
                description="Replaces selected text with 'Replacement'."
                icon="SdkIcons.Sdk_default_icon">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>

    <applicationListeners>
        <listener class="com.github.r00bertos1.zzpjplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
